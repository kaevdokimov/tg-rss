scrape_configs:
  - job_name: 'node'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'docker'
    static_configs:
      - targets: ['localhost:9323']

  - job_name: 'tg-rss-app'
    static_configs:
      - targets: ['localhost:8080']
    metrics_path: '/metrics'
