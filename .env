# TimeZone
TZ=Europe/Moscow

# Telegram Bot (основной бот)
TELEGRAM_API_KEY=your_telegram_bot_token_here

# Telegram Bot для отправки отчетов анализа (отдельный бот)
TELEGRAM_SIGNAL_API_KEY=your_signal_bot_token_here

# PostgreSQL Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=news_bot

# Redis configuration
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_NEWS_CHANNEL=news-items
REDIS_NOTIFY_CHANNEL=news-notifications

# Timeout for RSS polling (in seconds)
TIMEOUT=30

# Content scraper configuration
CONTENT_SCRAPER_INTERVAL=1   # интервал парсинга контента в минутах
CONTENT_SCRAPER_BATCH=60     # размер батча для парсинга контента
CONTENT_SCRAPER_CONCURRENT=6 # количество параллельных запросов

# ОПТИМИЗИРОВАННЫЕ НАСТРОЙКИ РЕСУРСОВ для сервера 900MB RAM, 1 CPU
# Bot ресурсы (уменьшено для включения news-analyzer)
BOT_MEM_LIMIT=400m
BOT_MEM_RESERVATION=200m
BOT_CPUS=0.4

# Redis ресурсы (оптимизировано)
REDIS_MEM_LIMIT=80m
REDIS_MEM_RESERVATION=40m
REDIS_CPUS=0.05

# PostgreSQL ресурсы (оптимизировано)
DB_MEM_LIMIT=200m
DB_MEM_RESERVATION=100m
DB_CPUS=0.12

# News Analyzer API Security
# Учетные данные для доступа к /docs и /redoc
NEWS_ANALYZER_ADMIN=admin
NEWS_ANALYZER_PASSWORD=changeme
