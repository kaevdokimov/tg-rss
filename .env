# TimeZone
TZ=Europe/Moscow

# Telegram Bot
TELEGRAM_API_KEY=YOUR_TELEGRAM_BOT_TOKEN_HERE
# Telegram Signal Bot
TELEGRAM_SIGNAL_API_KEY=YOUR_TELEGRAM_SIGNAL_BOT_TOKEN_HERE

# PostgreSQL Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=news_bot

# Kafka
KAFKA_BROKERS=kafka:29092
KAFKA_NEWS_TOPIC=news-items
KAFKA_NOTIFY_TOPIC=news-notifications

# Timeout for RSS polling (in seconds)
TIMEOUT=30

# Content scraper configuration
CONTENT_SCRAPER_INTERVAL=1
CONTENT_SCRAPER_BATCH=100
CONTENT_SCRAPER_CONCURRENT=1
