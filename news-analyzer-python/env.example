# PostgreSQL Database Configuration
# Использует те же параметры, что и Go-проект
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=news_bot

# Timezone
TZ=Europe/Moscow

# Logging
LOG_LEVEL=INFO

# News Analyzer Configuration (опционально, для docker-compose)
# Расписание автоматического запуска (формат: "HH:MM,HH:MM")
# По умолчанию: 12:00 и 19:00 (два раза в день)
ANALYZER_SCHEDULE_TIMES=3:00,9:00,12:00,15:00,21:00

# Запустить анализ сразу при старте контейнера (true/false)
ANALYZER_RUN_ON_STARTUP=false

# Уровень логирования для analyzer
ANALYZER_LOG_LEVEL=INFO

# Telegram для отправки отчетов
# Используется отдельный бот для отправки отчетов всем пользователям
# Токен настраивается через GitHub Actions secrets (TELEGRAM_SIGNAL_API_KEY)
# или в .env файле для локальной разработки
# 
# ВАЖНО: Пользователи должны сначала написать боту /start,
# чтобы бот мог им отправлять сообщения
# TELEGRAM_SIGNAL_API_KEY=your_signal_bot_token_here

# Оптимизация производительности
# Лимит на количество новостей для обработки (по умолчанию: 1000)
# Уменьшите это значение, если сервер перегружается
MAX_NEWS_LIMIT=2400

# Задержка между отправками сообщений в Telegram (в секундах, по умолчанию: 0.05)
# Telegram API лимит: 30 сообщений/сек, рекомендуется 0.05 (20 сообщений/сек)
TELEGRAM_SEND_DELAY=0.05

# Дополнительные оптимизации для docker-compose
# Максимальное количество новостей для анализатора в контейнере (по умолчанию: 300)
ANALYZER_MAX_NEWS_LIMIT=2400

# Задержка между отправками в Telegram для анализатора (по умолчанию: 0.1 сек)
ANALYZER_TELEGRAM_DELAY=0.1

# Минимальное количество новостей для запуска анализа (по умолчанию: 10)
# Если новостей меньше этого числа, анализ будет пропущен для экономии ресурсов
ANALYZER_MIN_NEWS_THRESHOLD=10

# API Security
# Учетные данные для доступа к /docs и /redoc
NEWS_ANALYZER_ADMIN=admin
NEWS_ANALYZER_PASSWORD=changeme
