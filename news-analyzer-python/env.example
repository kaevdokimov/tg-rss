# PostgreSQL Database Configuration
# Использует те же параметры, что и Go-проект
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=news_bot

# Timezone
TZ=Europe/Moscow

# Logging
LOG_LEVEL=INFO

# News Analyzer Configuration (опционально, для docker-compose)
# Расписание автоматического запуска (формат: минута час * * *)
# По умолчанию: каждый день в 00:00
ANALYZER_CRON_SCHEDULE=0 0 * * *

# Запустить анализ сразу при старте контейнера (true/false)
ANALYZER_RUN_ON_STARTUP=false

# Уровень логирования для analyzer
ANALYZER_LOG_LEVEL=INFO
